@model BorrowedItem
@{
    string title = ViewBag.Action + " Borrowed Item";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ItemId">Item Name</label>
        <select asp-for="ItemId" class="form-control">
            <option value="">select an item</option>
            @foreach (Inventory i in ViewBag.Inventories)
            {
                <option value="@i.ItemId">@i.ItemName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BorrowerId">Borrower</label>
        <select asp-for="BorrowerId" class="form-control">
            <option value="">select an item</option>
            @foreach (Borrower b in ViewBag.Borrowers)
            {
                <option value="@b.BorrowerId">@b.BorrowerLname, @b.BorrowerFname</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BorrowDate">Borrowed Date</label>
        <input type="date" asp-for="BorrowDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReturnDate">Returned Date</label>
        <input type="date" asp-for="ReturnDate" class="form-control" />
    </div>

    <input type="hidden" asp-for="BorrowedItemID" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="BorrowedItem" asp-action="List" class="btn btn-primary">Cancel</a>
</form>
