@model List<DiskInventory.Models.BorrowedItem>
@{
    ViewBag.Title = "Borrowed Item Manager";
}
<div class="text-center">
    <h1>@ViewBag.Title</h1>
    <h2>List of people of whom I have lent out items.</h2>
</div>

<a asp-controller="BorrowedItem" asp-action="Add">Check out an item</a>

@if (Model.Count() > 0)@*if the table is empty the html will display a message*@
{
    <table class="table table_bordered table-striped">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Borrowed Date</th>
                <th>Returned Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borroweditem in Model)@*outputs all of the rows in the artist table*@
            {
            <tr>
                <td>@borroweditem.Item.ItemName</td>
                <td>@borroweditem.Borrower.BorrowerFname</td>
                <td>@borroweditem.Borrower.BorrowerLname</td>
                <td>@borroweditem.BorrowDate</td>
                <td>@borroweditem.ReturnDate</td>
                <td>
                    <a asp-controller="BorrowedItem" asp-action="Edit" asp-route-id="@borroweditem.BorrowedItemID">Edit</a>                    
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No data found.</div>
}
