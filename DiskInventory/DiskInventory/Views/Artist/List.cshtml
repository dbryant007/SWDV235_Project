@model List<DiskInventory.Models.Artist>
@{
    ViewBag.Title = "Artist Manager";
}
<div class="text-center">                           
    <h1>@ViewBag.Title</h1>
    <h2>List of artists of whom I have collected some of their works.</h2>
</div>

<a asp-controller="Artist" asp-action="Add">Add New Artist</a>

@if (Model.Count() > 0)                                                 @*if the table is empty the html will display a message*@
{
    <table class="table table_bordered table-striped">
        <thead>
            <tr>
                <th>Artist ID</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Model)                               @*outputs all of the rows in the artist table*@
            {
                <tr>
                    <td>@artist.ArtistId</td>
                    <td>@artist.ArtistLname</td>
                    <td>@artist.ArtistFname</td>
                    <td>@artist.ArtistTypeId</td>
                    <td>
                        <a asp-controller="Artist" asp-action="Edit" asp-route-id="@artist.ArtistId">Edit</a>
                        <a asp-controller="Artist" asp-action="Delete" asp-route-id="@artist.ArtistId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No data found.</div>
}
