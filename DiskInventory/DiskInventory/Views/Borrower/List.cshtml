@model List<DiskInventory.Models.Borrower>
@{
    ViewBag.Title = "Borrower Manager";
}
<div class="text-center">
    <h1>@ViewBag.Title</h1>
    <h2>List of fellow music lovers.</h2>
</div>

<a asp-controller="Borrower" asp-action="Add">Add New Borrower</a>

@if (Model.Count() > 0)                                                     @*if the table is empty the html will display a message*@
{
    <table class="table table_bordered table-striped">
        <thead>
            <tr>
                <th>Borrower ID</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borrower in Model)                                 @*outputs all of the rows in the borrower table*@
            {
                <tr>
                    <td>@borrower.BorrowerId</td>
                    <td>@borrower.BorrowerLname</td>
                    <td>@borrower.BorrowerFname</td>
                    <td>@borrower.BorrowerPhone</td>
                    <td>
                        <a asp-controller="Borrower" asp-action="edit" asp-route-id="@borrower.BorrowerId">Edit</a>
                        <a asp-controller="Borrower" asp-action="delete" asp-route-id="@borrower.BorrowerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No data found.</div>
}
